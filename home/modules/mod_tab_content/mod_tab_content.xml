	<version>1.0</version>
	<description>TAB_CONTENT_DESC</description>
	

	<files>
		<filename module="mod_tab_content">mod_tab_content.php</filename>
		<filename>index.html</filename>
		<filename>mod_tab_content.xml</filename>
		<folder>language</folder>
		<folder>elements</folder>
		<folder>js</folder>
		<folder>tmpl</folder>
	</files>
	
	<languages>
		<language tag="en-GB">language/en-GB.mod_tab_content.ini</language>
	</languages>
	
	<config>
		<fields name="params" addfieldpath="/modules/mod_tab_content/elements">
			<fieldset name="TABs" label="LABEL TAB PROPERTIES">
			<field type="loader" />
				<field name="classsufix" type="text" default="" label="class sufix" description="class sufix" />
				<field name="tabstyle" type="list" default="vetical" label="Tab style" description="Tab style">
					<option value="0">horizontal</option>
					<option value="1">vetical</option>
				</field>
				<field name="TabWidth" type="text" default="880" label="LABEL TAB WIDTH" description="DESC TAB WIDTH" />
				<field name="colorTabSelect" type="hotcolor" default="#EE9900" label="Color tab select" description="Color tab select" />
				<field name="displaystyle" type="list" default="center" label="Display style" description="Display style">
					<option value="0">Center</option>
					<option value="1">Left</option>
					<option value="2">Right</option>
					<option value="3">Justify</option>
				</field>
			</fieldset>
			<fieldset name="TAB1" label="LABEL TAB1">
				<field name="title1" type="text" default="" label="LABEL HEADING" description="DESC HEADING" />
				<field name="TabContent1" type="Editor" default="" label="LABEL TAB CONTENT" description="DESC TAB CONTENT" filter="safehtml" />
			</fieldset>
			<fieldset name="TAB2" label="LABEL TAB2">
				<field name="title2" type="text" default="" label="LABEL HEADING" description="DESC HEADING" />
